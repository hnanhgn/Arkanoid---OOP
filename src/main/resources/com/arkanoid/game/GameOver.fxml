<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arkanoid.game.ui.GameOverController">
    <children>
        <ImageView fitHeight="700.0" fitWidth="850.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../images/GameOver.png" />
            </image>
        </ImageView>
        <Button layoutX="254.0" layoutY="600.0" mnemonicParsing="false" onAction="#onRestartClick" prefHeight="100.0" prefWidth="138.0" style="-fx-background-color: transparent; -fx-background-radius: 0; -fx-padding: 0;">
            <graphic>
                <ImageView fitHeight="84.0" fitWidth="153.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../images/GameOverRestart.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button layoutX="476.0" layoutY="614.0" mnemonicParsing="false" onAction="#onBackMenuClick" prefHeight="75.0" prefWidth="121.0" style="-fx-background-color: transparent; -fx-background-radius: 0; -fx-padding: 0;">
            <graphic>
                <ImageView fitHeight="66.0" fitWidth="135.0" pickOnBounds="true" preserveRatio="true" />
            </graphic>
        </Button>
        <Button layoutX="557.0" layoutY="493.0" mnemonicParsing="false" onAction="#onCloseClick" prefHeight="81.0" prefWidth="147.0" style="-fx-background-color: transparent; -fx-background-radius: 0; -fx-padding: 0;">
            <graphic>
                <ImageView fitHeight="89.0" fitWidth="151.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../images/GameOverExit.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>

</AnchorPane>