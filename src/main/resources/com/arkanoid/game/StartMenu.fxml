<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arkanoid.game.ui.StartMenuController">

    <Button fx:id="startButton"
            layoutX="230.0" layoutY="437.0"
            onAction="#onStartClick"
            prefHeight="40.0" prefWidth="140.0"
            style="-fx-background-color: orange;
            -fx-text-fill: white;
            -fx-font-weight: bold;
            -fx-background-radius: 10;
            -fx-border-color: red;
            -fx-border-width: 2;
            -fx-border-radius: 10;"
            text="Start Game" />

    <Button fx:id="closeButton"
            layoutX="230.0" layoutY="526.0"
            onAction="#onCloseClick"
            prefHeight="40.0" prefWidth="140.0"
            style="-fx-background-color: orange;
            -fx-text-fill: white;
            -fx-font-weight: bold;
            -fx-background-radius: 10;
            -fx-border-color: red;
            -fx-border-width: 2;
            -fx-border-radius: 10;"
            text="Close" />

</AnchorPane>
