<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arkanoid.game.ui.StartMenuController">
   <children>
      <ImageView fitHeight="700.0" fitWidth="850.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/StartMenu.png" />
         </image>
      </ImageView>
      <Button contentDisplay="TOP" layoutX="209.0" layoutY="387.0" mnemonicParsing="false" onAction="#onStartClick" prefHeight="137.0" prefWidth="115.0" style="-fx-background-color: transparent; -fx-background-radius: 0; -fx-padding: 0;">
         <graphic>
            <ImageView fitHeight="92.0" fitWidth="91.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/PlayButton.png" />
               </image>
            </ImageView>
         </graphic>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Button>
      <Button layoutX="567.0" layoutY="494.0" mnemonicParsing="false" onAction="#onCloseClick" prefHeight="82.0" prefWidth="137.0" style="-fx-background-color: transparent; -fx-background-radius: 0; -fx-padding: 0;" textFill="TRANSPARENT">
         <graphic>
            <ImageView fitHeight="89.0" fitWidth="141.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/ExitButton.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>

</AnchorPane>
