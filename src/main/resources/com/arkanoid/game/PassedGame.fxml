<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.arkanoid.game.ui.PassedModeController"
            prefHeight="700.0" prefWidth="600.0">

    <children>
        <Button fx:id="nextButton" layoutX="227.0" layoutY="390.0"
                mnemonicParsing="false" onAction="#onNextClick"
                prefHeight="30.0" prefWidth="150.0" text="Next Mode"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;"/>

        <Button fx:id="menuButton" layoutX="227.0" layoutY="450.0"
                mnemonicParsing="false" onAction="#onMenuClick"
                prefHeight="30.0" prefWidth="150.0" text="Menu"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;"/>

        <Button fx:id="closeButton" layoutX="227.0" layoutY="510.0"
                mnemonicParsing="false" onAction="#onCloseClick"
                prefHeight="30.0" prefWidth="150.0" text="Close"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;"/>
    </children>
</AnchorPane>