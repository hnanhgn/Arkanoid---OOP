<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arkanoid.game.ui.PassedModeController">

   <children>

      <ImageView fx:id="passedImage" fitHeight="700" fitWidth="600" preserveRatio="false" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
         <image>

            <Image url="@../../../images/PassedGame.png" />
         </image>
      </ImageView>

      <Button fx:id="nextButton" layoutX="227.0" layoutY="390.0" mnemonicParsing="false" onAction="#onNextClick" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;" text="Next Mode" />

      <Button fx:id="menuButton" layoutX="227.0" layoutY="450.0" mnemonicParsing="false" onAction="#onMenuClick" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;" text="Menu" />

      <Button fx:id="closeButton" layoutX="227.0" layoutY="510.0" mnemonicParsing="false" onAction="#onCloseClick" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;" text="Close" />
   </children>
</AnchorPane>
