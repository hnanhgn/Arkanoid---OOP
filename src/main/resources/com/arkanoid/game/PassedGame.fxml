<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arkanoid.game.ui.PassedModeController">

   <children>

      <ImageView fitHeight="700" fitWidth="850.0" preserveRatio="false">
         <image>

            <Image url="@../../../images/PassedGame.png" />
         </image>
      </ImageView>
      <Button layoutX="320.0" layoutY="402.0" mnemonicParsing="false" onAction="#onNextClick" prefHeight="78.0" prefWidth="76.0" style="-fx-background-color: transparent; -fx-background-radius: 0; -fx-padding: 0;">
         <graphic>
            <ImageView fitHeight="83.0" fitWidth="84.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/NextModeButton.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button layoutX="391.0" layoutY="594.0" mnemonicParsing="false" onAction="#onMenuClick" prefHeight="92.0" prefWidth="138.0" style="-fx-background-color: transparent; -fx-background-radius: 0; -fx-padding: 0;">
         <graphic>
            <ImageView fitHeight="100.0" fitWidth="142.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/MenuButton.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button layoutX="566.0" layoutY="495.0" mnemonicParsing="false" onAction="#onCloseClick" prefHeight="83.0" prefWidth="138.0" style="-fx-background-radius: 0; -fx-background-color: transparent; -fx-padding: 0;">
         <graphic>
            <ImageView fitHeight="84.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/ExitButton.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
