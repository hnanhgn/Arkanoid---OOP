<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.arkanoid.game.ui.GamePauseController"
            prefWidth="600" prefHeight="700"
            style="-fx-background-color: rgba(0,0,0,0.9); -fx-background-radius: 10;">

    <Text text="Game Paused"
          layoutX="200" layoutY="150"
          style="-fx-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>

    <Button fx:id="resumeButton"
            text="Tiếp tục"
            layoutX="250" layoutY="220"
            prefWidth="100"
            onAction="#onResumeClick"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>

    <Button fx:id="restartButton"
            text="Chơi lại"
            layoutX="250" layoutY="280"
            prefWidth="100"
            onAction="#onRestartClick"
            style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px;"/>

    <Button fx:id="homeButton"
            text="Về trang chủ"
            layoutX="250" layoutY="340"
            prefWidth="100"
            onAction="#onHomeClick"
            style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px;"/>
</AnchorPane>