<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:id="root"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.arkanoid.game.ui.ModeSelectController"
            prefWidth="850" prefHeight="700">

    <VBox alignment="CENTER" spacing="15" layoutX="300" layoutY="140">
        <Label text="CHỌN CHẾ ĐỘ CHƠI" style="-fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: white;" />

        <Button fx:id="mode1Button" text="Chế độ 1" prefWidth="250"/>
        <Button fx:id="mode2Button" text="Chế độ 2" prefWidth="250"/>
        <Button fx:id="mode3Button" text="Chế độ 3" prefWidth="250"/>
        <Button fx:id="mode4Button" text="Chế độ 4" prefWidth="250"/>
        <Button fx:id="backButton" text="← Quay lại" prefWidth="250"/>
    </VBox>
</AnchorPane>