<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.arkanoid.game.ui.PassedModeController"
            prefHeight="700.0" prefWidth="850.0">

    <children>
        <Button fx:id="nextButton" layoutX="310.0" layoutY="395.0"
                mnemonicParsing="false" onAction="#onNextClick"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;"/>

        <Button fx:id="menuButton" layoutX="380.0" layoutY="586.0"
                mnemonicParsing="false" onAction="#onMenuClick"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;"/>

        <Button fx:id="closeButton" layoutX="555.0" layoutY="485.0"
                mnemonicParsing="false" onAction="#onCloseClick"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;"/>
    </children>
</AnchorPane>