<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.arkanoid.game.ui.GameOverController"
            prefHeight="700.0" prefWidth="850.0">

    <Button fx:id="restartButton"
            layoutX="240.0" layoutY="595.0"
            onAction="#onRestartClick"
            style="-fx-background-color: transparent; -fx-border-color: transparent;" />

    <Button fx:id="closeButton"
            layoutX="550.0" layoutY="490.0"
            onAction="#onCloseClick"
            style="-fx-background-color: transparent; -fx-border-color: transparent;" />

    <Button fx:id="backMenuButton"
            layoutX="450.0" layoutY="600.0"
            onAction="#onBackMenuClick"
            style="-fx-background-color: transparent; -fx-border-color: transparent;" />

</AnchorPane>